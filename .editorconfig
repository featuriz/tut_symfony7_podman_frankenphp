# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[**/{Dockerfile,Containerfile,Caddyfile,*.sh}]
indent_style = tab

[{compose.yaml,compose.*.yaml,compose.*yaml,.github/**/*.yaml}]
indent_size = 2

[**.md]
trim_trailing_whitespace = false
indent_size = unset
indent_style = unset